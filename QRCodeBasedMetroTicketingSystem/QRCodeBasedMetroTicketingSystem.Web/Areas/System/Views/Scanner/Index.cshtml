@model SelectStationViewModel

@{
    Layout = "~/Areas/System/Views/Shared/_ScannerLayout.cshtml";
    ViewData["Title"] = "Select Station for Scanning QR Code";
}

<div class="container select-scan-station-page my-5">
    <div class="header mb-5">
        <h2 class="text-center">Select Station for Scanning QR Code</h2>
    </div>

    <div class="row justify-content-center">
        <div class="col-xl-6 col-lg-8 col-md-10">
            <div class="card">
                <div class="card-header">
                    <h5>Select Station</h5>
                </div>
                <div class="card-body">
                    <form asp-area="System" asp-controller="Scanner" asp-action="Index" method="post">
                        <div class="mb-4">
                            <label for="stationId" class="form-label">Station</label>
                            <select id="stationId" asp-for="StationId" class="form-select">
                                <option value="" selected disabled>Select station</option>
                                @foreach (var station in Model.StationList)
                                {
                                    <option value="@station.Id">@station.Name</option>
                                }
                            </select>
                            <span asp-validation-for="StationId" class="text-danger"></span>
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary">
                                Continue to Scan
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>