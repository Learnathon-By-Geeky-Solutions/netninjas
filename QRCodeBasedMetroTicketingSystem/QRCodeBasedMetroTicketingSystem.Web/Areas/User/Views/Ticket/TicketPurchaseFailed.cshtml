@model PurchaseStatusViewModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Ticket Purchase Successful";
}

@section Styles {
    <link rel="stylesheet" href="~/css/buy-qr-ticket.min.css" asp-append-version="true" />
}

<div class="container buy-qr-ticket ticket-purchase-status">
    <div class="row">
        <div class="col-lg-7">
            <div class="card">
                <div class="card-header">
                    <h5 class="failed">Ticket Purchase Failed</5>
                </div>
                <div class="card-body">
                    <!-- Ticket Icon -->
                    <div class="ticket-icon failed my-3">
                        <i class="fa-solid fa-ticket"></i>
                    </div>

                    <h4 class="purchase-status-title failed text-center">Ticket Purchase Failed!</h4>
                    <p class="purchase-status-message text-center">Unfortunately, your ticket purchase could not be completed</p>

                    <div class="ticket-details-container mt-3">
                        <div class="ticket-details">
                            <h5>Attempted Ticket Details</h5>

                            <div class="ticket-detail-row">
                                <div class="detail-label">From Station</div>
                                <div class="detail-value">@Model.OriginStationName</div>
                            </div>
                            <div class="ticket-detail-row">
                                <div class="detail-label">To Station</div>
                                <div class="detail-value">@Model.DestinationStationName</div>
                            </div>
                            <div class="ticket-detail-row">
                                <div class="detail-label">Ticket Type</div>
                                <div class="detail-value">@Model.TicketType</div>
                            </div>
                            <div class="ticket-detail-row">
                                <div class="detail-label">Payment Method</div>
                                <div class="detail-value">@Model.PaymentMethod</div>
                            </div>
                            <div class="ticket-detail-row">
                                <div class="detail-label">Fare</div>
                                <div class="detail-value"><span class="taka-icon">৳</span>@Model.FareAmount</div>
                            </div>
                        </div>
                    </div>

                    <div class="error-details">
                        <h5><i class="fas fa-exclamation-triangle me-2"></i>Why did this happen?</h5>
                        <p>Your ticket purchase could not be completed due to the following reason:</p>
                        <p class="fw-bold">Insufficient balance in your account</p>
                        <p>Your current balance is less than the required fare amount (<span class="taka-icon">৳</span>@Model.FareAmount).</p>
                    </div>

                    <!-- Action Buttons -->
                    <div class="action-buttons">
                        <a asp-controller="Home" asp-action="Index" class="btn btn-outline-primary">Back to Home</a>
                        <a asp-area="User" asp-controller="Ticket" asp-action="MyQrTickets" class="btn btn-primary">View My Tickets</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/layout.js"></script>
}
