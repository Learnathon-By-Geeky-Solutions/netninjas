@{
    ViewData["Title"] = "Dashboard";
}

<div class="content-wrapper dashboard-section">
    <div class="content-header">
        <h2 class="content-title">Dashboard</h2>
        <div class="content-action">
            <button class="btn btn-outline-primary">
                <i class="fas fa-sync-alt me-2"></i> Refresh
            </button>
        </div>
    </div>

    <!-- Stats Cards -->
    <div class="row g-4">
        <div class="col-6 col-md-4">
            <div class="stats-card balance">
                <div class="stats-icon"><i class="fas fa-wallet"></i></div>
                <div class="stats-title">Total Top-ups</div>
                <div class="stats-value"><span class="taka-icon">৳</span>2500</div>
                <div class="stats-description">This month</div>
            </div>
        </div>
        <div class="col-6 col-md-4">
            <div class="stats-card trips">
                <div class="stats-icon"><i class="fas fa-subway"></i></div>
                <div class="stats-title">Total Trips</div>
                <div class="stats-value">24</div>
                <div class="stats-description">This month</div>
            </div>
        </div>
        <div class="col-6 col-md-4">
            <div class="stats-card tickets">
                <div class="stats-icon"><i class="fa-solid fa-ticket"></i></div>
                <div class="stats-title">Purchased Tickets</div>
                <div class="stats-value">5</div>
                <div class="stats-description">Valid for use</div>
            </div>
        </div>
    </div>

    <!-- Quick Actions -->
    <div class="quick-actions">
        <a href="#">
            <div class="quick-action-icon"><i class="fas fa-qrcode"></i></div>
            <div class="quick-action-text">Generate QR Ticket</div>
        </a>
        <a asp-area="User" asp-controller="Wallet" asp-action="AddBalance">
            <div class="quick-action-icon"><i class="fas fa-wallet"></i></div>
            <div class="quick-action-text">Add Balance</div>
        </a>
        <a href="/home#fare-checker-and-buy-qr-ticket">
            <div class="quick-action-icon"><i class="fa-solid fa-ticket"></i></div>
            <div class="quick-action-text">Buy QR Ticket</div>
        </a>
        <a href="/home#fare-checker-and-buy-qr-ticket">
            <div class="quick-action-icon"><i class="fas fa-calculator"></i></div>
            <div class="quick-action-text">Fare Calculator</div>
        </a>
    </div>

    <!-- Recent Activity -->
    <div class="history-card">
        <div class="history-header">
            <h3>Recent Activity</h3>
            <a href="#" class="arrow-card-action">View All <i class="fas fa-chevron-right"></i></a>
        </div>
        <ul class="history-list">
            <li>
                <div class="icon trip"><i class="fas fa-subway"></i></div>
                <div class="content">
                    <div class="text">Completed trip from Agargaon to Uttara North using Rapid Pass</div>
                    <div class="time">Today, 09:45 AM</div>
                </div>
                <div class="amount debit">-<small class="taka-icon">৳</small>60</div>
            </li>
            <li>
                <div class="icon trip"><i class="fas fa-subway"></i></div>
                <div class="content">
                    <div class="text">Completed trip from Uttara North to Agargaon using Ticket</div>
                    <div class="time">Today, 09:45 AM</div>
                </div>
                <div class="amount">-</div>
            </li>
            <li>
                <div class="icon ticket"><i class="fa-solid fa-ticket"></i></div>
                <div class="content">
                    <div class="text">Purchased Ticket for Uttara North to Agargaon</div>
                    <div class="time">Today, 10:30 AM</div>
                </div>
                <div class="amount debit">-<small class="taka-icon">৳</small>60</div>
            </li>
            <li>
                <div class="icon payment"><i class="fas fa-wallet"></i></div>
                <div class="content">
                    <div class="text">Added balance via bKash</div>
                    <div class="time">Yesterday, 05:20 PM</div>
                </div>
                <div class="amount credit">+<small class="taka-icon">৳</small>500</div>
            </li>
            <li>
                <div class="icon refund"><i class="fas fa-undo"></i></div>
                <div class="content">
                    <div class="text">Refund for cancelled ticket</div>
                    <div class="time">Yesterday, 02:15 PM</div>
                </div>
                <div class="amount credit">+<small class="taka-icon">৳</small>60</div>
            </li>
        </ul>
    </div>
</div>
