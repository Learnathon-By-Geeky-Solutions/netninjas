@model SystemSettingsViewModel

@{
    ViewData["Title"] = "Edit System Settings";
}

<div class="container-fluid">
    <!-- Page Header -->
    <div class="row mb-2">
        <div class="col-12 page-header">
            <h1 class="page-title">Edit System Settings</h1>
            <div class="breadcrumb">
                <span><a asp-area="Admin" asp-controller="Dashboard" asp-action="Index">Home</a></span><i class="bi bi-chevron-right"></i><span><a asp-area="Admin" asp-controller="SystemSettings" asp-action="Index">System Settings</a></span><i class="bi bi-chevron-right"></i><span>Edit</span>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <div class="card shadow-sm p-3">
                <div class="card-body">
                    <form asp-area="Admin" asp-controller="SystemSettings" asp-action="Edit" method="POST">
                        <div class="row mb-3">
                            <div class="col-md-6 pe-3">
                                <label asp-for="MinFare" class="form-label">Minimum Fare (TK)</label>
                                <input asp-for="MinFare" class="form-control" step="0.000001" min="0" required />
                                <span asp-validation-for="MinFare" class="text-danger"></span>
                            </div>

                            <div class="col-md-6 ps-3">
                                <label asp-for="FarePerKm" class="form-label">Fare Per Kilometer (TK)</label>
                                <input asp-for="FarePerKm" class="form-control" step="0.000001" min="0" required />
                                <span asp-validation-for="FarePerKm" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-6 pe-3">
                                <label asp-for="RapidPassQrCodeValidityMinutes" class="form-label">Rapid Pass QR Code Validity (minutes)</label>
                                <input asp-for="RapidPassQrCodeValidityMinutes" class="form-control" step="1" min="1" required />
                                <span asp-validation-for="RapidPassQrCodeValidityMinutes" class="text-danger"></span>
                            </div>

                            <div class="col-md-6 ps-3">
                                <label asp-for="QrTicketValidityMinutes">QR Ticket Validity (minutes)</label>
                                <input asp-for="QrTicketValidityMinutes" class="form-control" step="1" min="1" required />
                                <span asp-validation-for="QrTicketValidityMinutes" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-6 pe-3">
                                <label asp-for="MaxTripDurationMinutes" class="form-label">Maximum Trip Duration (minutes)</label>
                                <input asp-for="MaxTripDurationMinutes" class="form-control" step="1" min="1" required />
                                <span asp-validation-for="MaxTripDurationMinutes" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 ps-3">
                                <label asp-for="TimeLimitPenaltyFee" class="form-label">Time Limit Penalty Fee (Tk)</label>
                                <input asp-for="TimeLimitPenaltyFee" class="form-control" step="1" min="0" required />
                                <span asp-validation-for="TimeLimitPenaltyFee" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="d-flex justify-content-end gap-2">
                            <a asp-area="Admin" asp-controller="SystemSettings" asp-action="Index" class="btn btn-secondary">
                                <i class="bi bi-x-circle me-1"></i> Cancel
                            </a>
                            <button type="submit" class="btn btn-success">
                                <i class="bi bi-floppy me-1"></i> Save Changes
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
