@model SettingsViewModel

@{
    ViewData["Title"] = "System Settings";
}

<div class="container-fluid">
    <!-- Page Header -->
    <div class="row mb-2">
        <div class="col-12 page-header">
            <h1 class="page-title">System Settings</h1>
            <div class="breadcrumb">
                <span><a asp-area="Admin" asp-controller="Dashboard" asp-action="Index">Home</a></span><i class="bi bi-chevron-right"></i><span>System Settings</span>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <div class="card shadow-sm p-3">
                <div class="card-body">
                    <form asp-area="Admin" asp-controller="SystemSettings" asp-action="Index" method="POST">
                        <div class="row">
                            <div class="col-md-6 mb-3 pe-3">
                                <label asp-for="MinFare" class="form-label">Minimum Fare (TK)</label>
                                <input asp-for="MinFare" class="form-control" step="0.000001" min="0" disabled required />
                                <span asp-validation-for="MinFare" class="text-danger"></span>
                            </div>

                            <div class="col-md-6 mb-3 ps-3">
                                <label asp-for="FarePerKm" class="form-label">Fare Per Kilometer (TK)</label>
                                <input asp-for="FarePerKm" class="form-control" step="0.000001" min="0" disabled required />
                                <span asp-validation-for="FarePerKm" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3 pe-3">
                                <label asp-for="QrCodeValidTime" class="form-label">QR Code Valid Time (Minutes)</label>
                                <input asp-for="QrCodeValidTime" class="form-control" step="1" min="0" disabled required />
                                <span asp-validation-for="QrCodeValidTime" class="text-danger"></span>
                            </div>

                            <div class="col-md-6 mb-3 ps-3">
                                <label asp-for="TripTimeLimit" class="form-label">Time Limit for a Single Trip (Minutes)</label>
                                <input asp-for="TripTimeLimit" class="form-control" step="1" min="0" disabled required />
                                <span asp-validation-for="TripTimeLimit" class="text-danger"></span>
                            </div>
                        </div>
                        
                        <div class="d-flex justify-content-end gap-2">
                            <a asp-area="Admin" asp-controller="SystemSettings" asp-action="Edit" class="btn btn-success">
                                <i class="bi bi-pencil-square me-1"></i> Edit Settings
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
