@{
    ViewData["Title"] = "Dashboard";
}

<!-- Page Header -->
<div class="page-header">
    <h1 class="page-title">Dashboard</h1>
    <div class="breadcrumb">
        <span><a href="#">Home</a></span><i class="bi bi-chevron-right"></i><span>Dashboard</span>
    </div>
</div>

<!-- Cards Section -->
<div class="cards">
    <div class="card">
        <div class="card-icon">
            <i class="bi bi-people"></i>
        </div>
        <div class="card-content">
            <h3>Total Users</h3>
            <p>1,234</p>
        </div>
    </div>
    <div class="card">
        <div class="card-icon">
            <i class="bi bi-buildings"></i>
        </div>
        <div class="card-content">
            <h3>Total Stations</h3>
            <p>50</p>
        </div>
    </div>
    <div class="card">
        <div class="card-icon">
            <i class="bi bi-cash-coin"></i>
        </div>
        <div class="card-content">
            <h3>Total Revenue</h3>
            <p>$12,345</p>
        </div>
    </div>
    <div class="card">
        <div class="card-icon">
            <i class="bi bi-train-front"></i>
        </div>
        <div class="card-content">
            <h3>Active Trains</h3>
            <p>23</p>
        </div>
    </div>
</div>

<!-- Stats Cards -->
<div class="stats-cards-grid">
    <div class="stats-card">
        <div class="stats-icon" style="background: rgba(52, 152, 219, 0.2)">
            <i class="bi bi-people text-primary"></i>
        </div>
        <div class="stats-info">
            <h3>1,234</h3>
            <p>Total Passengers</p>
        </div>
        <div class="stats-progress">
            <span class="badge success">
                <i class="bi bi-arrow-up"></i> 3.48%
            </span>
        </div>
    </div>

    <div class="stats-card">
        <div class="stats-icon" style="background: rgba(46, 204, 113, 0.2)">
            <i class="bi bi-currency-dollar text-success"></i>
        </div>
        <div class="stats-info">
            <h3>$45,789</h3>
            <p>Revenue</p>
        </div>
        <div class="stats-progress">
            <span class="badge success">
                <i class="bi bi-arrow-up"></i> 5.27%
            </span>
        </div>
    </div>

    <div class="stats-card">
        <div class="stats-icon" style="background: rgba(231, 76, 60, 0.2)">
            <i class="bi bi-train-front text-danger"></i>
        </div>
        <div class="stats-info">
            <h3>89</h3>
            <p>Active Trains</p>
        </div>
        <div class="stats-progress">
            <span class="badge danger">
                <i class="bi bi-arrow-down"></i> 1.08%
            </span>
        </div>
    </div>

    <div class="stats-card">
        <div class="stats-icon" style="background: rgba(155, 89, 182, 0.2)">
            <i class="bi bi-geo-alt text-purple"></i>
        </div>
        <div class="stats-info">
            <h3>42</h3>
            <p>Stations</p>
        </div>
        <div class="stats-progress">
            <span class="badge info">
                <i class="bi bi-dash"></i> 0.00%
            </span>
        </div>
    </div>
</div>

<!-- Charts -->
<div class="charts-container">
    <div class="chart-card">
        <div class="chart-header">
            <h2>Passenger Traffic</h2>
            <div class="chart-actions">
                <button class="btn-icon"><i class="bi bi-download"></i></button>
                <button class="btn-icon"><i class="bi bi-three-dots-vertical"></i></button>
            </div>
        </div>
        <div class="chart-body">
            <!-- Chart placeholder -->
            <div class="chart-placeholder">Chart Area</div>
        </div>
    </div>

    <div class="chart-card">
        <div class="chart-header">
            <h2>Revenue Analysis</h2>
            <div class="chart-actions">
                <button class="btn-icon"><i class="bi bi-download"></i></button>
                <button class="btn-icon"><i class="bi bi-three-dots-vertical"></i></button>
            </div>
        </div>
        <div class="chart-body">
            <!-- Chart placeholder -->
            <div class="chart-placeholder">Chart Area</div>
        </div>
    </div>
</div>

