<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Metro Rail Admin</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/admin.min.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/QRCodeBasedMetroTicketingSystem.Web.styles.css" asp-append-version="true" />
</head>
<body>
    <div class="sidebar">
        <div class="sidebar-header">
            <a href="#">
                <img src="~/images/metro-logo.png" alt="Logo" class="sidebar-logo">
                <span class="sidebar-title">METRO RAIL</span>
            </a>
            <i class="bi bi-x-lg close-sidebar-icon"></i>
        </div>

        <nav class="sidebar-nav">
            <a href="" class="active-link"><i class="bi bi-columns-gap"></i> Dashboard</a>
            <a href=""><i class="bi bi-buildings"></i> Manage Stations</a>
            <a href=""><i class="bi bi-cash-coin"></i> Fare Settings</a>
            <a href=""><i class="bi bi-people"></i> Manage Users</a>
            <a href=""><i class="bi bi-bar-chart-line"></i> Reports</a>
            <a href=""><i class="bi bi-exclamation-triangle"></i> Emergency</a>
            <a href=""><i class="bi bi-gear"></i> System Settings</a>
        </nav>

        <div class="sidebar-footer">
            Logged in as: Admin
        </div>
    </div>

    <div class="main-container">
        <header>
            <div class="left-elements">
                <div class="sidebar-menu-icon">
                    <i class="bi bi-list"></i>
                </div>
            </div>

            <div class="right-elements">
                <div id="fullscreen">
                    <i id="enter-fullscreen" class="bi bi-arrows-fullscreen"></i>
                    <i id="exit-fullscreen" class="bi bi-fullscreen-exit" style="display: none"></i>
                </div>

                <div class="header-dropdown">
                    <div class="dropdown-toggle">
                        <i class="bi bi-person"></i>Admin <i class="bi bi-caret-down-fill"></i>
                    </div>
                    <ul class="dropdown-menu">
                        <li><a class="dropdown-item" href="#!"><i class="bi bi-gear"></i> Settings</a></li>
                        <li class="sub-dropdown dropdown-item">
                            <i class="bi bi-cloud-sun"></i> Appearance <i class="bi bi-chevron-right"></i>
                            <div class="them-switcher">
                                <div class="switch-block">
                                    <p>Sidebar</p>
                                    <div class="btnSwitch">
                                        <button type="button" class="changeSidebarTheme" data-theme="dark-slate"><i class="bi bi-check-lg"></i></button>
                                        <button type="button" class="changeSidebarTheme" data-theme="dark-blue"><i class="bi bi-check-lg"></i></button>
                                        <button type="button" class="changeSidebarTheme" data-theme="charcoal-black"><i class="bi bi-check-lg"></i></button>
                                        <button type="button" class="changeSidebarTheme" data-theme="midnight-navy"><i class="bi bi-check-lg"></i></button>
                                        <button type="button" class="changeSidebarTheme" data-theme="deep-navy"><i class="bi bi-check-lg"></i></button>
                                        <button type="button" class="changeSidebarTheme" data-theme="white"><i class="bi bi-check-lg"></i></button>
                                        <button type="button" class="changeSidebarTheme" data-theme="midnight-blue"><i class="bi bi-check-lg"></i></button>
                                        <button type="button" class="changeSidebarTheme" data-theme="dark-gray"><i class="bi bi-check-lg"></i></button>
                                    </div>
                                </div>

                                <div class="switch-block">
                                    <p>Header</p>
                                    <div class="btnSwitch">
                                        <button type="button" class="changeHeaderTheme" data-theme="dark-slate"><i class="bi bi-check-lg"></i></button>
                                        <button type="button" class="changeHeaderTheme" data-theme="dark-blue"><i class="bi bi-check-lg"></i></button>
                                        <button type="button" class="changeHeaderTheme" data-theme="charcoal-black"><i class="bi bi-check-lg"></i></button>
                                        <button type="button" class="changeHeaderTheme" data-theme="midnight-navy"><i class="bi bi-check-lg"></i></button>
                                        <button type="button" class="changeHeaderTheme" data-theme="deep-navy"><i class="bi bi-check-lg"></i></button>
                                        <button type="button" class="changeHeaderTheme" data-theme="white"><i class="bi bi-check-lg"></i></button>
                                        <button type="button" class="changeHeaderTheme" data-theme="midnight-blue"><i class="bi bi-check-lg"></i></button>
                                        <button type="button" class="changeHeaderTheme" data-theme="dark-gray"><i class="bi bi-check-lg"></i></button>
                                    </div>
                                </div>
                            </div>
                        </li>
                        <li><a class="dropdown-item" href="#!"><i class="bi bi-box-arrow-right"></i> Logout</a></li>
                    </ul>
                </div>
            </div>
        </header>

        <main>
            @RenderBody()
        </main>

        <footer>
            Copyright &copy; 2025 - 2025 by <a href="https://github.com/Learnathon-By-Geeky-Solutions/netninjas" target="_blank" style="margin-left: 5px;"> NetNinjas</a>. All rights reserved.
        </footer>
    </div>
    <script src="~/js/admin.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
