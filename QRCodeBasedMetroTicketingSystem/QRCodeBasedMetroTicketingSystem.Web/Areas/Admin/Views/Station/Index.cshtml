@model IEnumerable<Station>

@{
    ViewData["Title"] = "Manage Stations";
}

<div class="container-fluid">
    <!-- Page Header -->
    <div class="row mb-2">
        <div class="col-12 page-header">
            <h1 class="page-title">Manage Stations</h1>
            <div class="breadcrumb">
                <span><a asp-area="Admin" asp-controller="Dashboard" asp-action="Index">Home</a></span><i class="bi bi-chevron-right"></i><span>Manage Stations</span>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <div class="card shadow-sm p-3">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center mb-4">
                        <h3 class="card-title mb-0">Stations Info</h3>
                        <a asp-area="Admin" asp-controller="Station" asp-action="Create" class="btn btn-success"><i class="bi bi-plus-circle me-1"></i> Add Station</a>
                    </div>

                    <!-- Stations Info Table -->
                    <div class="table-container">
                        <table>
                            <thead class="thead-light">
                                <tr>
                                    <th>Station Order</th>
                                    <th>Station Name</th>
                                    <th style="width: 30%;">Address</th>
                                    <th>Coordinates</th>
                                    <th>Status</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.Any())
                                {
                                    @foreach (var station in Model)
                                    {
                                        <tr>
                                            <td>#@station.Order</td>
                                            <td>@station.StationName</td>
                                            <td>@station.Address</td>
                                            <td>
                                                @station.Latitude°N <br> @station.Longitude°E
                                            </td>
                                            <td>
                                                @if (station.Status == "Active")
                                                {
                                                    <span class="badge bg-success p-2">Active</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-danger p-2">Inactive</span>
                                                }
                                            </td>
                                            <td>
                                                <div class="table-action-buttons">
                                                    <a asp-area="Admin" asp-controller="Station" asp-action="Edit" class="btn-icon edit-btn" data-bs-toggle="tooltip" data-bs-placement="top"
                                                       title="Edit Station">
                                                        <i class="bi bi-pencil"></i>
                                                    </a>
                                                    <a asp-area="Admin" asp-controller="Station" asp-action="Delete" class="btn-icon delete-btn" data-bs-toggle="tooltip" data-bs-placement="top"
                                                       title="Delete Station">
                                                        <i class="bi bi-trash"></i>
                                                    </a>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <!-- Show message if no stations exist -->
                                    <tr>
                                        <td colspan="6" class="text-center text-muted">
                                            No stations available. Please add a station.
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>