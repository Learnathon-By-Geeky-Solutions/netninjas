@model List<QRCodeBasedMetroTicketingSystem.Domain.Entities.Station>
@{
    ViewData["Title"] = "Station Distance Calculator";
}

<div class="container">
    <h2>Station Distance Calculator</h2>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">@TempData["SuccessMessage"]</div>
    }

    @if (ViewBag.Error != null)
    {
        <div class="alert alert-danger">@ViewBag.Error</div>
    }

    <div class="row mb-3">
        <div class="col">
            <a asp-action="CacheDistances" class="btn btn-primary">Update Station Distance Cache</a>
        </div>
    </div>

    <div class="card mb-4">
        <div class="card-header">Calculate Distance</div>
        <div class="card-body">
            <form asp-area="" asp-controller="Distance" asp-action="GetDistance" method="post">
                <div class="row">
                    <div class="col-md-5">
                        <div class="form-group">
                            <label>From Station:</label>
                            <select name="stationId1" class="form-control" required>
                                <option value="">-- Select Station --</option>
                                @foreach (var station in Model)
                                {
                                    <option value="@station.StationId">@station.StationName</option>
                                }
                            </select>
                        </div>
                    </div>
                    <div class="col-md-5">
                        <div class="form-group">
                            <label>To Station:</label>
                            <select name="stationId2" class="form-control" required>
                                <option value="">-- Select Station --</option>
                                @foreach (var station in Model)
                                {
                                    <option value="@station.StationId">@station.StationName</option>
                                }
                            </select>
                        </div>
                    </div>
                    <div class="col-md-2 d-flex align-items-end">
                        <button type="submit" class="btn btn-success">Calculate</button>
                    </div>
                </div>
            </form>
        </div>
    </div>

    @if (ViewBag.Distance != null)
    {
        <div class="card">
            <div class="card-header bg-info text-white">Result</div>
            <div class="card-body">
                <h4>Distance: @ViewBag.Distance.ToString("F2") km</h4>
            </div>
        </div>
    }
</div>