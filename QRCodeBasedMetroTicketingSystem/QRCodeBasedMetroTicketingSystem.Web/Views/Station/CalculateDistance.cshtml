@model QRCodeBasedMetroTicketingSystem.Web.Models.ViewModels.StationDistanceViewModel
@{
    ViewData["Title"] = "Calculate Distance Between Stations";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="CalculateDistance" method="post">
    <div class="form-group">
        <label for="Station1Id">Station 1 ID:</label>
        <input type="number" class="form-control" id="Station1Id" name="Station1Id" value="@Model.Station1Id" required />
    </div>

    <div class="form-group">
        <label for="Station2Id">Station 2 ID:</label>
        <input type="number" class="form-control" id="Station2Id" name="Station2Id" value="@Model.Station2Id" required />
    </div>

    <button type="submit" class="btn btn-primary">Calculate Distance</button>
</form>

@if (Model.Distance != null)
{
    <h3>Distance between @Model.Station1Name and @Model.Station2Name:</h3>
    <p><strong>@Model.Distance</strong> meters</p>
}
else if (!string.IsNullOrEmpty(Model.ErrorMessage))
{
    <div class="alert alert-danger">
        @Model.ErrorMessage
    </div>
}
