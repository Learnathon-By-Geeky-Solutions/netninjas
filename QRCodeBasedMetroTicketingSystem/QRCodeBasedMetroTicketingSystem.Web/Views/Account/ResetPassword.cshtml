@model ResetPasswordModel

@{
    ViewData["Title"] = "Reset Password";
}

@section Styles {
    <link rel="stylesheet" href="~/css/auth.min.css" asp-append-version="true" />
}

<section class="auth-section reset-password py-5">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-8 col-lg-6 col-xl-5">
                <div class="card shadow-lg border-0">
                    <div class="card-header bg-primary text-white text-center py-4">
                        <h2 class="mb-0">Create New Password</h2>
                        <p class="mb-0 mt-2">Set a strong password for your account</p>
                    </div>
                    <div class="card-body">
                        <!-- Key Icon -->
                        <div class="key-icon mb-4">
                            <i class="fas fa-key"></i>
                        </div>

                        <h4 class="text-center mb-4">Reset Your Password</h4>
                        <p class="text-center text-muted mb-4">Your password reset link is valid. Please create a new password below.</p>

                        <form asp-controller="Account" asp-action="ResetPassword" class="loading-form" id="resetPasswordForm">
                            <input asp-for="Email" type="hidden" />
                            <input asp-for="Token" type="hidden" />

                            <div class="mb-3">
                                <label asp-for="Password" class="form-label">New Password</label>
                                <input asp-for="Password" class="form-control" id="password" placeholder="Enter your new password" />
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>

                            <div class="mb-4">
                                <label asp-for="ConfirmPassword" class="form-label">Confirm New Password</label>
                                <input asp-for="ConfirmPassword" class="form-control" id="confirmPassword" placeholder="Confirm your new password" />
                                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                            </div>

                            <div class="d-grid">
                                <button type="submit" class="btn btn-primary" data-loading-text="Resetting...">
                                    <span class="spinner-border spinner-border-sm me-2 d-none" role="status" aria-hidden="true" id="loadingSpinner"></span>
                                    <span class="btn-text"><i class="fas fa-check-circle me-2"></i> Reset Password</span>
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <script src="~/js/auth.js" asp-append-version="true"></script>
    <script src="~/js/form-loading-spinner.js" asp-append-version="true"></script>
}