@model ForgotPasswordRequest

@{
    ViewData["Title"] = "Forgot Password";
}

@section Styles {
    <link rel="stylesheet" href="~/css/auth.min.css" asp-append-version="true" />
}

<section class="auth-section forgot-password py-5">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-8 col-lg-6 col-xl-5">
                <div class="card shadow-lg border-0">
                    <div class="card-header bg-primary text-white text-center py-4">
                        <h2 class="mb-0">Forgot Password?</h2>
                        <p class="mb-0 mt-2">Enter your email to reset your password</p>
                    </div>
                    <div class="card-body">
                        <!-- Key Icon -->
                        <div class="key-icon mb-4">
                            <i class="fas fa-key"></i>
                        </div>

                        <p class="text-center text-muted mb-4">Enter the email address associated with your account, and we'll send you instructions to reset your password.</p>

                        <form id="forgotPasswordForm">
                            <div class="mb-4">
                                <label for="email" class="form-label">Email Address</label>
                                <input asp-for="Email" type="email" class="form-control" id="email" placeholder="Enter your email address" required>
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>

                            <div class="d-grid">
                                <button type="submit" class="btn btn-primary">
                                    <i class="fas fa-paper-plane me-2"></i> Send Reset Link
                                    <span id="countdown" class="ms-1 d-none">(60s)</span>
                                </button>
                            </div>
                        </form>

                        <!-- Security Note -->
                        <div class="security-note mt-4">
                            <h5><i class="fa-solid fa-shield me-2"></i> Security Note</h5>
                            <p>For your security, a password reset link will be sent to your registered email address. The link will expire after 30 minutes.</p>
                        </div>

                        <div class="text-center mt-4">
                            <p class="mb-0">Remember your password? <a asp-controller="Account" asp-action="Login" class="link">Back to Login</a></p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <script src="~/js/auth.js" asp-append-version="true"></script>
    <script>
        // Resend email functionality with countdown
        $(document).ready(function () {
            var countdownTime = 60;
            var countdownInterval;

            $('#forgotPasswordForm').on('submit', function (e) {
                e.preventDefault();
                var btn = $(this).find('button[type="submit"]');

                // Save original button text and show loading
                var originalText = btn.html();
                btn.html('<span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span> Sending...');
                btn.prop('disabled', true);

                // Get email
                var email = $('#email').val();

                // Make AJAX call to resend password reset email
                $.ajax({
                    url: '/SendPasswordResetEmail',
                    type: 'POST',
                    data: { email: email },
                    success: function(response) {
                        // Restore button text
                        btn.html(originalText);

                        // Remove any existing notification
                        $('#notificationToast').remove();

                        // Create temporary div to hold the notification
                        var notificationDiv = $('<div>', {
                            class: 'alert alert-success alert-dismissible fade show position-fixed top-0 end-0',
                            role: 'alert',
                            id: 'notificationToast',
                            style: 'top: 80px!important; right: 30px!important; z-index: 100'
                        });

                        // Add message and close button
                        notificationDiv.html(
                            response.message || 'Verification email has been resent. Please check your inbox.' +
                            '<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>'
                        );

                        // Add to main div
                        $('main').append(notificationDiv);

                        // Show toast
                        const toast = new bootstrap.Toast(document.getElementById('notificationToast'), {
                            autohide: true,
                            delay: 5000
                        });
                        toast.show();

                        // Start countdown
                        countdownInterval = function () {
                            btn.prop('disabled', true);
                            $('#countdown').removeClass('d-none').text(`(${countdownTime}s)`);

                            countdownInterval = setInterval(function () {
                                countdownTime--;
                                $('#countdown').text(`(${countdownTime}s)`);

                                if (countdownTime <= 0) {
                                    clearInterval(countdownInterval);
                                    btn.prop('disabled', false);
                                    $('#countdown').addClass('d-none');
                                    countdownTime = 60;
                                }
                            }, 1000);
                        };

                        countdownInterval();
                    },
                    error: function(xhr) {
                        // Handle error response
                        var message = xhr.responseJSON && xhr.responseJSON.message
                            ? xhr.responseJSON.message
                            : 'Failed to resend verification email. Please try again later.';

                        $('#notificationToast').remove();

                        // Create error notification
                        var notificationDiv = $('<div>', {
                            class: 'alert alert-danger alert-dismissible fade show position-fixed top-0 end-0',
                            role: 'alert',
                            id: 'notificationToast',
                            style: 'top: 80px!important; right: 30px!important; z-index: 100'
                        });

                        // Add message and close button
                        notificationDiv.html(
                            message +
                            '<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>'
                        );

                        $('main').append(notificationDiv);

                        // Show toast
                        const toast = new bootstrap.Toast(document.getElementById('notificationToast'), {
                            autohide: true,
                            delay: 5000
                        });
                        toast.show();

                        // Restore button text
                        btn.html(originalText);

                        // Enable button again in case of error
                        btn.prop('disabled', false);
                        $('#countdown').addClass('d-none');
                    }
                });
            });
        });
    </script>
}
