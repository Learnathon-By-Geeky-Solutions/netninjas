@using System.Text.RegularExpressions

@{
    ViewData["Title"] = "Forgot Password Confirmation";
    var email = Context.Request.Query["email"];
    string maskedEmail = Regex.Replace(email, @"(?<=.{2}).(?=.*@)", "*");
}

@section Styles {
    <link rel="stylesheet" href="~/css/auth.min.css" asp-append-version="true" />
}

<section class="auth-section email-sent-msg py-5">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-8 col-lg-6 col-xl-5">
                <div class="card shadow-lg border-0">
                    <div class="card-header bg-primary text-white text-center py-4">
                        <h2 class="mb-0">Check Your Email</h2>
                        <p class="mb-0 mt-2">Password Reset Email Sent</p>
                    </div>
                    <div class="card-body text-center">
                        <!-- Email Icon -->
                        <div class="email-icon mb-4">
                            <i class="fas fa-envelope"></i>
                        </div>

                        <h3 class="mb-3">Password Reset Email Sent</h3>
                        <p class="mb-3">We've sent password reset instructions to:</p>
                        <div class="email-address mb-3">@maskedEmail</div>
                        <p class="mb-4">
                            If your email address exists in our system, you will receive a password recovery link at your email address shortly.
                            Please check your inbox and follow the instructions to reset your password.
                        </p>

                        <div class="d-grid gap-3">
                            <a asp-controller="Account" asp-action="Login" class="btn btn-primary">
                                <i class="fas fa-sign-in-alt me-2"></i> Return to Login
                            </a>
                        </div>

                        <!-- Helpful Tips -->
                        <div class="tips-section mt-4">
                            <h5><i class="fas fa-lightbulb me-2"></i> Helpful Tips</h5>
                            <ul class="tips-list">
                                <li>
                                    <i class="fas fa-search"></i>
                                    <div>
                                        <span>Check your spam folder</span>
                                        <p class="mb-0">If you don't see the email in your inbox, it might be in your spam or junk folder</p>
                                    </div>
                                </li>
                                <li>
                                    <i class="fas fa-clock"></i>
                                    <div>
                                        <span>Link expires in 30 minutes</span>
                                        <p class="mb-0">For security reasons, the password reset link will expire after 30 minutes</p>
                                    </div>
                                </li>
                                <li>
                                    <i class="fas fa-envelope-open"></i>
                                    <div>
                                        <span>Email from Dhaka Metro Rail</span>
                                        <p class="mb-0">The email will be sent from <span class="fw-medium">info@dhakametrorail.gov.bd</span></p>
                                    </div>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

