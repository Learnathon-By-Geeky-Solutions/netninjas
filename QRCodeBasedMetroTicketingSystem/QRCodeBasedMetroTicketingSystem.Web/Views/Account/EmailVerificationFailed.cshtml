@{
    ViewData["Title"] = "Email Verification Failed";
}

@section Styles {
    <link rel="stylesheet" href="~/css/auth.min.css" asp-append-version="true" />
}

<section class="auth-section email-verification-failed py-5">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-8 col-lg-6 col-xl-5">
                <div class="card shadow-lg border-0">
                    <div class="card-header bg-danger text-white text-center py-4">
                        <h2 class="mb-0">Verification Failed</h2>
                        <p class="mb-0 mt-2">We couldn't verify your email address</p>
                    </div>
                    <div class="card-body text-center">
                        <!-- Error Icon -->
                        <div class="error-icon mb-4">
                            <i class="fas fa-exclamation-triangle"></i>
                        </div>

                        <h3 class="mb-3">Email Verification Failed</h3>
                        <p class="mb-4">We were unable to verify your email address. This could be due to an expired or invalid verification link.</p>

                        <div class="d-grid gap-3">
                            <a asp-controller="Account" asp-action="Login" class="btn btn-primary">
                                <i class="fas fa-sign-in-alt me-2"></i> Return to Login
                            </a>
                        </div>

                        <!-- Possible Reasons -->
                        <div class="possible-reasons mt-4">
                            <h5><i class="fas fa-info-circle me-2"></i> Possible Reasons</h5>
                            <ul class="reasons-list">
                                <li>Verification links expire after 24 hours for security reasons</li>
                                <li>Your email may have been verified already</li>
                                <li>The verification link may be incomplete or corrupted</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
