@{
    ViewData["Title"] = "Password Reset Successful";
}

@section Styles {
    <link rel="stylesheet" href="~/css/auth.min.css" asp-append-version="true" />
}

<!-- Confetti Animation -->
<div id="confetti-container"></div>

<section class="auth-section password-reset-success py-5">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-8 col-lg-6 col-xl-5">
                <div class="card shadow-lg border-0">
                    <div class="card-header bg-primary text-white text-center py-4">
                        <h2 class="mb-0">Password Reset Successful!</h2>
                        <p class="mb-0 mt-2">Your password has been updated</p>
                    </div>
                    <div class="card-body text-center">
                        <!-- Success Icon -->
                        <div class="success-icon mb-4">
                            <i class="fas fa-check"></i>
                        </div>

                        <h3 class="mb-3">Your Password Has Been Reset</h3>
                        <p class="mb-4">Your password has been successfully changed. You can now log in to your account using your new password.</p>

                        <div class="d-grid gap-3">
                            <a asp-controller="Account" asp-action="Login" class="btn btn-primary">
                                <i class="fas fa-sign-in-alt me-2"></i> Login Now
                            </a>
                        </div>

                        <!-- Security Info -->
                        <div class="security-info mt-4">
                            <h5><i class="fa-solid fa-shield me-2"></i> Security Information</h5>
                            <ul class="security-info-list">
                                <li>
                                    <i class="fas fa-sign-out-alt"></i>
                                    <div>
                                        <strong>Logged out of all devices</strong>
                                        <p class="mb-0">For your security, you've been logged out of all devices</p>
                                    </div>
                                </li>
                                <li>
                                    <i class="fas fa-bell"></i>
                                    <div>
                                        <strong>Email notification sent</strong>
                                        <p class="mb-0">A confirmation email has been sent to your registered email address</p>
                                    </div>
                                </li>
                                <li>
                                    <i class="fas fa-lock"></i>
                                    <div>
                                        <strong>Keep your password secure</strong>
                                        <p class="mb-0">Never share your password with anyone or use it on multiple sites</p>
                                    </div>
                                </li>
                            </ul>
                        </div>

                        <!-- Countdown -->
                        <div class="countdown-container mt-3">
                            <p>You will be redirected to the login page in <span id="countdown" class="countdown">10</span> seconds</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <script>
        // Countdown timer
        let countdownTime = 10;
        const countdownElement = document.getElementById('countdown');

        const countdownInterval = setInterval(function() {
            countdownTime--;
            countdownElement.textContent = countdownTime;

            if (countdownTime <= 0) {
                clearInterval(countdownInterval);
                window.location.href = '/login';
            }
        }, 1000);
    </script>
}